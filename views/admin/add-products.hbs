      <div class="page-content form-page">
            <!-- Page Header-->
            <div class="bg-dash-dark-2 py-4">
              <div class="container-fluid">
                <h2 class="h5 mb-0">Add Product</h2>
              </div>
            </div>
            <!-- Breadcrumb-->
            <div class="container-fluid py-2">
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 py-3 px-0">
                  <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Add Product</li>
                </ol>
              </nav>
            </div>
        <!-- Forms Section-->
        <section class="pt-0"> 
          <div class="container-fluid">
            <div class="row gy-4">
             
              <!-- Form Elements -->
              <div class="col-lg-12">
                <div class="card">
                  <div class="card-header">
                    <h3 class="h4 mb-0 text-secondary">Add Product</h3>
                  </div>
                  <div class="card-body pt-0">
                    <form class="form-horizontal" action="/admin/add-products" method="post" enctype="multipart/form-data">
                      <div class="row">
                        <label class="col-sm-3 form-label">Product Name</label>
                        <div class="col-sm-9">
                          <input type="text" name="Name" class="form-control" required>
                        </div>
                      </div>
                      <div class="my-5"></div>
                       <div class="row">
                        <label class="col-sm-3 form-label">Description</label>
                        <div class="col-sm-9">
                          <input type="text" name="Description" class="form-control" required>
                        </div>
                      </div>
                        <div class="my-5"></div>
                     <div class="row ">
                        <label class="col-sm-3 form-label">Category</label>
                        <div class="col-sm-9">
                          <select class="form-select mb-" name="Category" required>
                            <option>MENS</option>
                            <option>WOMENS</option>
                            <option>KIDS</option>
                          </select>
                        </div>
                      </div>
                       <div class="my-5"></div>
                       <div class="row">
                        <label class="col-sm-3 form-label">Price</label>
                        <div class="col-sm-9">
                          <input type="text" name="Price" class="form-control" required>
                        </div>
                      </div>
                       <div class="my-5"></div>
                       <div class="row">
                        <label class="col-sm-3 form-label">Stock</label>
                        <div class="col-sm-9">
                          <input type="text" name="Stock" class="form-control" required>
                        </div>
                      </div>
                       <div class="my-5"></div>
                       <div class="row">
                        <label class="col-sm-3 form-label">Image</label>
                        <div class="col-sm-9">
                          <input type="file" name="Image" multiple class="form-control" required>
                        </div>
                      </div>
                    
                      <div class="my-4"></div>
                      <div class="row">
                        <div class="col-sm-9 ms-auto">
                          <button class="btn btn-outline-info opacity-75" type="submit">Add Product</button>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- Page Footer-->
          <footer class="position-absolute bottom-0 bg-dash-dark-2 text-white text-center py-3 w-100 text-xs" id="footer">
            <div class="container-fluid text-center">
