
{{> Navbar}}

<section id="details">

<div class="container">
		<div class="procard card">
			<div class="container-fliud">
				<div class="prowrapper row">
					<div class="preview col-md-6">
						
						<div class="preview-pic tab-content" id="zoom">
						  <div><img id="myImg"src="/product-images/{{productDetails._id}}0.jpg" /></div>
						</div>
						<ul class="preview-thumbnail nav nav-tabs">
						  <li><a><img style="cursor:pointer ;" class="proimg" onclick="changeimg('/product-images/{{productDetails._id}}0.jpg')" id="pic1" src="/product-images/{{productDetails._id}}0.jpg" /></a></li>
						  <li><a ><img style="cursor:pointer ;" class="proimg" onclick="changeimg('/product-images/{{productDetails._id}}1.jpg')" id="pic2" src="/product-images/{{productDetails._id}}1.jpg" /></a></li>
						  <li><a><img style="cursor:pointer;" class="proimg" onclick="changeimg('/product-images/{{productDetails._id}}2.jpg')" id="pic3" src="/product-images/{{productDetails._id}}2.jpg" /></a></li>
						  <li><a><img style="cursor:pointer;" class="proimg" onclick="changeimg('/product-images/{{productDetails._id}}3.jpg')" id="pic4" src="/product-images/{{productDetails._id}}3.jpg" /></a></li>
						</ul>
						
					</div>
						<div id="myModal" class="modal">
  						<span class="close">&times;</span>
  						<img class="modal-content" id="img01">
						</div>
					<div class="details col-md-6">
						<h3 class="product-title">{{productDetails.Name}}</h3>
						
						<p class="product-description">{{productDetails.Description}}</p>
						<h4 class="price">current price: <span>&#8377; {{productDetails.Price}}</span></h4>
						<p class="vote"><strong>91%</strong> of buyers enjoyed this product! <strong>(87 votes)</strong></p>
						<h5 class="sizes">sizes:
							<span class="size" data-toggle="tooltip" title="small">s <input type="checkbox"></span>
							<span class="size" data-toggle="tooltip" title="medium">m <input type="checkbox"></span>
							<span class="size" data-toggle="tooltip" title="large">l <input type="checkbox"></span>
							<span class="size" data-toggle="tooltip" title="xtra large">xl <input type="checkbox"></span>
						</h5>
						
						<div class="action">
							<button class="add-to-cart btn btn-default" onclick="addToCart('{{productDetails._id}}')" type="button">add to cart</button>
							<button class="like btn btn-default" onclick="addToWishlist('{{productDetails._id}}')" type="button">add to wishlist</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
    </section>

	{{> footer}}